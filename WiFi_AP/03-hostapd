#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: Pi-hole
# Runs the hostapd 
# ==============================================================================

DIR="/config/wifiap"
# DIR_RASPAP="${DIR}/raspap"
CONFIG_HOSTAPD="${DIR}/hostapd/hostapd.conf" 

# Run hostapd
bashio::log.info "Starting hostapd..."
hostapd -d -B -i wlan0 ${CONFIG_HOSTAPD} -f /tmp/hostapd.log