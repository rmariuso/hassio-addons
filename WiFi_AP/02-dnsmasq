#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: Pi-hole
# Runs the dnsmasq 
# ==============================================================================
DIR="/config/wifiap"
CONFIG="${DIR}/dnsmasq/090_raspap.conf" 

# Run dnsmasq
bashio::log.info "Starting dnsmasq..." 
dnsmasq -C "${CONFIG}"
