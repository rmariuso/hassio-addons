#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: Pi-hole
# Runs the vnstatd 
# ==============================================================================

DIR="/config/wifiap"
CONFIG="${DIR_RASPAP}/vnstat.conf"

# Run vnstatd
bashio::log.info "Starting vnstatd ..."
vnstatd -d --config "${CONFIG}"
