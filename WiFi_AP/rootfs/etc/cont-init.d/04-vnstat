#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: Pi-hole
# Runs the vnstatd 
# ==============================================================================

DIR="/config/wifiap"
DIR_RASPAP="${DIR}/raspap"
CONFIG_VNSTAT="${DIR_RASPAP}/vnstat.conf"

# Run vnctatd
bashio::log.info "Starting vnstatd ..."
vnstatd -d --config "${CONFIG_VNSTAT}"
vnstat --config "${CONFIG_VNSTAT}" -i wlan0
