#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: Pi-hole
# Runs the hostapd daemon
# ==============================================================================

DIR="/config/wifiap"
CONFIG="${DIR}/dhcpcd/dhcpcd.conf" 

# Run dhcpcd
bashio::log.info "Starting dhcpcd..." 
dhcpcd -f "${CONFIG}"